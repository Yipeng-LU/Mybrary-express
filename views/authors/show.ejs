<h2 class='page-header'><%= author.name %></h2>
<div class='description-text'><%= author.description %><br>Uploaded by: <%= author.userName %></div>
<div class='btn-row'>
	<a href='/authors/<%= author.id %>/edit' class='btn btn-primary first-btn'>Edit</a>
	<%- include('../partials/deleteForm',{url:`/authors/${author.id}`}) %>
</div>
<% if (booksByAuthor.length>0){ %>
	<h2 class='page-header'>Books by author</h2>
	<div class='book-grid'>
		<% booksByAuthor.forEach(book=>{ %>
			<a href='/books/<%= book.id %>'>
				<img class='book-cover' src='<%= book.coverImageData %>'>
			</a>
		<% }) %>
	</div>
<% } %>
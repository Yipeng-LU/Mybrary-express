<h2 class='page-header'>Search authors</h2>
<form action='/authors' method='get'>
	<div class='form-row'>
		<div class='form-item'>
			<label>Name</label>
			<input type='text' name='name' class='form-control' value=<%= searchOption %>>
		</div>
	</div>
	<div class='form-row form-btn'>
		<button type='submit' class='btn btn-primary'>Search</button>
	</div>
</form>
<div class='container'>
	<% authors.forEach(author=>{ %>
		<div class='author-row'>
			<div class='author-name'><%= author.name %></div>
			<div class='btn-row'>
				<a href='/authors/<%= author.id %>' class='btn btn-primary first-btn'>View</a>
				<a href='/authors/<%= author.id %>/edit' class='btn btn-primary'>Edit</a>
				<%- include('../partials/deleteForm',{url:`/authors/${author.id}`}) %>
			</div>
		</div>
	<% }) %>
</div>
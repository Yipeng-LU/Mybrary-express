<h2 class='page-header'>Welcome, <%= user.name %></h2>
<div class='btn-row'>
	<a href='/users/logout' class='btn btn-danger' onclick="return confirm('Are you sure?')">Log out</a>
	<a href='/users/changePassword' class='btn btn-primary'>Change password</a>
</div>
<br>
<% if (typeof books!='undefined'&&books.length>0){ %>
	<h3>My favourite books</h3>
	<div class='book-grid book-grid-large'>
		<% books.forEach(book=>{ %>
			<a href='/books/<%= book.id %>'>
				<img  class='book-cover book-cover-large' src='<%= book.coverImageData %>'>
			</a>
		<% }) %>
	</div>
<% } %>

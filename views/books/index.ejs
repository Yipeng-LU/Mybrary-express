<h2 class='page-header'>Search book</h2>
<form action='/books' method='get'>
	<div class='form-row'>
		<div class='form-item'>
			<label>Search title</label>
			<input type='text' name='title' class='form-control' value=<%= searchOption.title %>>
		</div>
	</div>
	<div class='form-row'>
		<div class='form-item'>
			<label>Published after</label>
			<input type='date' name='publishedAfter' class='form-control' value=<%= searchOption.publishedAfter %>>
		</div>
		<div class='form-item'>
			<label>Published before</label>
			<input type='date' name='publishedBefore' class='form-control' value=<%= searchOption.publishedBefore %>>
		</div>
	</div>
	<div class='form-row btn-row form-btn'>
		<button type='submit' class='btn btn-primary'>Search</button>
	</div>
</form>
<br>
<div class='container'>
	<div class='book-grid book-grid-large'>
		<% books.forEach(book=>{ %>
			<a href='/books/<%= book.id %>'>
				<img class='book-cover book-cover-large' src='<%= book.coverImageData %>'>
			</a>
		<% }) %>
	</div>
</div>